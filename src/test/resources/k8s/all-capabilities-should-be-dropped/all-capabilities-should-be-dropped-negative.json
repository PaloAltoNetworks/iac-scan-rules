{
  "apiVersion": "v1",
  "kind": "Deployment",
  "metadata": {
    "name": "flask-cap",
    "namespace": "default"
  },
  "spec": {
    "template": {
      "metadata": {
        "name": "flask-cap",
        "namespace": "default"
      },
      "spec": {
        "containers": [
          {
            "image": "mateobur/flask",
            "name": "flask-cap",
            "securityContext": {
              "capabilities": {
                "drop": [
                  "ALL"
                ]
              }
            }
          }
        ]
      }
    }
  }
}